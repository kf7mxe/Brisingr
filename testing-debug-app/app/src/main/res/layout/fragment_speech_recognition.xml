<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kf7mxe.personalassistantdebugingandtesting.ui.speechRecognition.SpeechRecognitionFragment"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/text_reecognition_result"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:layout_weight="4"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        >
    <ImageView
        android:id="@+id/mic"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="12dp"
        android:layout_weight="2"
        android:src="@drawable/speech_recognition" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Not Recording"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:id="@+id/recording_status_text"/>
    </LinearLayout>
</LinearLayout>