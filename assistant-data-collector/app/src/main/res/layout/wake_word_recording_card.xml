<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:orientation="horizontal"
              android:layout_gravity="center"
              android:layout_height="100dp">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:srcCompat="@drawable/baseline_play_circle_24"
            android:id="@+id/playButton" android:layout_weight="1"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/recordingName" android:layout_weight="1"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:srcCompat="@drawable/baseline_delete_24"
            android:id="@+id/deleteRecordingButton" android:layout_weight="1"/>
</LinearLayout>