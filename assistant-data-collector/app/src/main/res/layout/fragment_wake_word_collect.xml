<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".ui.wakeWord.WakeWordCollectFragment">

    <TextView android:layout_width="match_parent" android:layout_height="0dp"
              android:text="Recordings"
              android:textSize="24sp"
              android:layout_weight="1"
              android:gravity="center"
              android:id="@+id/wakeWordTextView"/>
<androidx.recyclerview.widget.RecyclerView android:layout_width="match_parent" android:layout_height="0dp"
                                              android:id="@+id/wakeWordRecyclerView" android:layout_weight="10"/>


    <ImageButton
            android:src="@drawable/record"
            android:layout_width="match_parent"
            android:layout_weight="4"
            android:layout_height="0dp" android:id="@+id/recordPlayButton" android:scaleType="fitCenter"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight="4"
            android:layout_height="0dp">
       <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:text="Records for 1 second \n Click the volume rockers or the record button to record one second"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/recordTextView"/>
    </LinearLayout>
</LinearLayout>